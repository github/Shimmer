<?xml version="1.0"?>
<package >
  <metadata>
    <id>Shimmer</id>
    <version>$version$-beta</version>
    <title>It's like ClickOnce but Works™</title>
    <authors>$author$</authors>
    <owners>$author$</owners>
    <licenseUrl>https://github.com/github/Shimmer/blob/master/COPYING</licenseUrl>
    <projectUrl>https://github.com/github/Shimmer/blob/master</projectUrl>
    <iconUrl>http://f.cl.ly/items/1G1J1l220W0J1W2R1o2E/Image%202012.09.06%204:03:56%20PM.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>It's like ClickOnce but Works™ </description>
    <copyright>Copyright 2012 GitHub</copyright>
    <tags>Installer Desktop WiX</tags>

    <dependencies>
      <dependency id="Shimmer.Core" version="[$version$]" />
      <dependency id="Shimmer.Client" version="[$version$]" />
    </dependencies>
  </metadata>

  <files>
    <file src="bin\$configuration$\*.exe" target="tools" />
    <file src="bin\$configuration$\*.dll" target="tools" />
    <file src="bin\$configuration$\*.pdb" target="tools" />
    <file src="tools\*.ps1" target="tools" />
  </files>
</package>
